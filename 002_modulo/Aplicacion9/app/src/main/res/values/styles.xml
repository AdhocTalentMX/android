<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Botones"
        parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/miColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">presiono</item>
    </style>

    <style name="AppTheme.Botones.Operaciones"
        parent="AppTheme.Botones">
        <item name="android:background">#970202</item>
    </style>

    <style name="AppTheme.Botones.numeros" parent="AppTheme.Botones">
        <item name="android:background">#3d3b3b</item>
    </style>

</resources>
